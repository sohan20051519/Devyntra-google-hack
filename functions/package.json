{
  "name": "devyntra-functions",
  "version": "1.0.0",
  "description": "Devyntra Firebase Functions",
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.json && copyfiles -u 1 src/workflow-template.yml lib",
    "deploy": "npm run build && firebase deploy --only functions",
    "serve": "npm run build && firebase emulators:start --only functions",
    "start": "npm run serve",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.0",
    "libsodium-wrappers": "^0.7.14",
    "node-fetch": "^3.3.2",
    "@google/genai": "^1.24.0",
    "axios": "^1.7.0",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "eslint": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "typescript": "^5.8.2",
    "rimraf": "^5.0.1",
    "copyfiles": "^2.4.1"
  }
}
